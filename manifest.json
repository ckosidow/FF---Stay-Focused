{
    "manifest_version": 2,
    "name": "stayFocused",
    "version": "1.0",
    "description": "Disables web pages after a certain time limit",
    "permissions": ["storage"],
    "browser_action": {
        "default_title": "stayFocused",
        "default_popup": "pages/whitelist.html",
        "default_icon": {
            "16": "icons/icon-grey.png",
            "32": "icons/icon-grey.png"
        },
        "theme_icons": [{
            "light": "icons/icon-light.png",
            "dark": "icons/icon-grey.png",
            "size": 16
        }, {
            "light": "icons/icon-light.png",
            "dark": "icons/icon-grey.png",
            "size": 32
        }]
    },
    "icons": {
        "48": "icons/icon-grey.png",
        "96": "icons/icon-grey.png"
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "scripts/stayFocused.js"
            ]
        }
    ]
}